<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fafafa"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/view_bottom_nav_bar"
        android:id="@+id/lin_btn"/>

    <ScrollView
        android:layout_above="@id/lin_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_transport_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="运输内容"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/ed_transport_content"
                android:layout_below="@id/tv_transport_content"
                android:layout_centerHorizontal="true"
                android:hint="请尽量详细的描述运输物品，包括但不限于物品民称，物品数量"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:gravity="top"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edit_transport"
                android:layout_width="match_parent"
                android:layout_height="156dp" />

            <TextView
                android:id="@+id/tv_remark"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@id/ed_transport_content"
                android:text="备注"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/ed_remark_content"
                android:layout_below="@id/tv_remark"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="请输入备注"
                android:gravity="top"
                android:padding="8dp"
                android:background="@drawable/edit_transport"
                android:layout_width="match_parent"
                android:layout_height="64dp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>