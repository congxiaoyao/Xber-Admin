<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_start_spot"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:text="任务点1"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_start_time_display"
        android:layout_marginTop="14dp"
        android:layout_below="@id/tv_start_spot"
        android:layout_alignLeft="@id/tv_start_spot"
        android:text="开始时间"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_end_time_display"
        android:layout_marginTop="14dp"
        android:layout_below="@id/tv_start_time_display"
        android:layout_alignLeft="@id/tv_start_time_display"
        android:text="开始时间"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_to"
        android:layout_alignTop="@id/tv_start_spot"
        android:layout_toRightOf="@id/tv_start_spot"
        android:layout_marginLeft="32dp"
        android:text="至"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_end_spot"
        android:layout_alignTop="@id/tv_to"
        android:layout_toRightOf="@id/tv_to"
        android:layout_marginLeft="24dp"
        android:text="任务点二"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_start_time"
        android:text="2017-3-3 11:11"
        android:textSize="15sp"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@id/tv_start_time_display"
        android:layout_alignTop="@id/tv_start_time_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_end_time"
        android:text="2017-3-3 11:11"
        android:textSize="15sp"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@id/tv_start_time_display"
        android:layout_alignTop="@id/tv_end_time_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:text="已送达"
        android:textColor="@color/colorGreen"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>